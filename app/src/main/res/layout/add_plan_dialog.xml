<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="450dp"
    android:background="#ffffff"
    android:orientation="vertical">

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:background="@color/blue"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TableRow android:layout_height="wrap_content">

            <TextView
                android:layout_width="0dp"
                android:layout_weight="1" />

            <TextView
                android:id="@+id/tv_plandialog_recipename"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Chicken"
                android:textAllCaps="false"
                android:textColor="#ffffff"
                android:textSize="20dp" />

            <TextView
                android:layout_width="0dp"
                android:layout_weight="1" />

            <!--<Button-->
            <!--android:layout_width="0dp"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:layout_weight="1"-->
            <!--android:background="@null"-->
            <!--android:text="100g"-->
            <!--android:textAllCaps="false"-->
            <!--android:textColor="#ffffff"-->
            <!--android:textSize="15dp" />-->
        </TableRow>

    </TableLayout>

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="270dp">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="8" />

            <TextView
                android:id="@+id/tv_plandialog_quantity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="100"
                android:textColor="#000000"
                android:textSize="20dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="g"
                android:textColor="#000000"
                android:textSize="20dp" />

            <TextView
                android:layout_width="0dp"
                android:layout_weight="1" />
        </TableRow>


        <com.github.mikephil.charting.charts.PieChart
            android:id="@+id/spread_pie_chart"
            android:layout_height="230dp"
            android:layout_margin="10dp"
            android:scaleType="fitXY" />
        <!--<TableRow-->
            <!--android:layout_height="30dp">-->
            <!--<TextView -->
                <!--android:text="Total "/>-->
            <!-- -->
        <!--</TableRow>-->

    </TableLayout>

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="150dp">

        <TableRow>

            <!-- todo button4-->
            <Button
                android:id="@+id/btn_plandialot_add"
                android:layout_width="0dp"
                android:layout_height="100dp"
                android:layout_weight="1"
                android:background="@drawable/button4"
                android:text="+50g"
                android:textColor="#ffffff"
                android:textAllCaps="false"
                android:textSize="35dp" />

            <Button
                android:textColor="#ffffff"
                android:id="@+id/btn_plandialog_delete"
                android:layout_width="0dp"
                android:layout_height="100dp"
                android:layout_weight="1"
                android:background="@drawable/button4"
                android:text="-50g"
                android:textAllCaps="false"
                android:textSize="35dp" />
        </TableRow>

        <TableRow android:layout_marginTop="10dp">

            <Button

                android:id="@+id/btn_plandialog_cancel"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:background="@drawable/button6_selector"
                android:text="Cancel"
                android:textAllCaps="false"
                android:textColor="@color/blue"
                android:textSize="15dp" />

            <Button
                android:id="@+id/btn_plandialog_ok"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:background="@drawable/button6_selector"
                android:text="Ok"
                android:textAllCaps="false"
                android:textColor="@color/blue"
                android:textSize="15dp" />
        </TableRow>
    </TableLayout>
</LinearLayout>