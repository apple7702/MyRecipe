            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#ffffff"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/physical_report"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="10dp"
                    android:text="Physical Report"
                    android:textColor="#000000"
                    android:textSize="20dp" />

                <ImageView
                    android:id="@+id/user"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/physical_report"
                    android:background="@drawable/user2" />

                <TextView
                    android:id="@+id/age"
                    android:layout_marginTop="30dp"
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/physical_report"
                    android:layout_marginLeft="25dp"
                    android:layout_toRightOf="@id/user"
                    android:text="Age:"
                    android:textColor="#000000"
                    android:textSize="15dp" />

                <TextView
                    android:id="@+id/age_user"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@id/age"
                    android:layout_toRightOf="@id/age"
                    android:text="xxxx"
                    android:textColor="#000000"
                    android:textSize="15dp" />

                <TextView
                    android:id="@+id/height"
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/age"
                    android:layout_marginLeft="25dp"
                    android:layout_marginTop="5dp"
                    android:layout_toRightOf="@id/user"
                    android:text="Height:"
                    android:textColor="#000000"
                    android:textSize="15dp" />

                <TextView
                    android:id="@+id/height_user"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@id/height"
                    android:layout_toRightOf="@+id/height"
                    android:text="165"
                    android:textColor="#000000" />

                <TextView
                    android:id="@+id/height_cm"

                    android:layout_width="30dp"
                    android:layout_height="20dp"
                    android:layout_below="@id/age_user"
                    android:layout_marginTop="5dp"
                    android:layout_toRightOf="@+id/height_user"
                    android:text="cm"
                    android:textColor="#000000"
                    android:textSize="15dp" />

                <TextView
                    android:id="@+id/weight"

                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/height"
                    android:layout_marginLeft="25dp"
                    android:layout_marginTop="5dp"
                    android:layout_toRightOf="@id/user"
