<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:background="#fcf9ee"

    tools:context="com.example.yuexiao.myrecipe10.personal1">


    <Button
        android:layout_width="fill_parent"
        android:layout_height="40dp"
        android:layout_gravity="center_horizontal"
        android:background="@color/blue"
        android:text="Personal Information-1"
        android:textAllCaps="false"
        android:textColor="#ffffff"
        android:textSize="20dp" />


    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="150dp"
        android:paddingLeft="60dp">

        <TableRow
            android:layout_marginTop="40dp"
            android:layout_weight="1"
            android:gravity="center"
            android:paddingBottom="30dp">


            <TextView

                android:id="@+id/tv_person1_gender"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Gender"
                android:textColor="#000000"

                />

            <RadioGroup
                android:layout_height="wrap_content"
                android:layout_alignBottom="@id/tv_person1_gender"
                android:layout_toRightOf="@id/tv_person1_gender"
                android:layout_weight="2"
                android:orientation="horizontal">

                <RadioButton
                    android:id="@+id/rb_personal1_female"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="50dp"
                    android:text="Female" />

                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Male" />
            </RadioGroup>

            <TextView android:layout_width="50dp" />

        </TableRow>


        <TableRow
            android:layout_weight="1"
            android:gravity="center"
            android:paddingBottom="30dp">


            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:text="Age"
                android:textColor="#000000" />

            <EditText
                android:id="@+id/et_personal1_age"
                android:layout_width="50dp"
                android:background="@drawable/round_editview"
                android:inputType="number"
                android:paddingLeft="15dp"
                android:singleLine="true"

                />

            <TextView android:layout_width="60dp" />

        </TableRow>

        <TableRow
            android:layout_weight="1"
            android:gravity="center"
            android:paddingBottom="30dp">


            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:text="Height"
                android:textColor="#000000"

                />

            <EditText
                android:id="@+id/et_personal1_height"
                android:layout_width="50dp"
                android:background="@drawable/round_editview"
                android:inputType="number"
                android:paddingLeft="15dp"
                android:singleLine="true" />

            <TextView
                android:layout_width="60dp"
                android:paddingLeft="5dp"
                android:text="cm" />

        </TableRow>

        <TableRow
            android:layout_weight="1"
            android:gravity="center">


            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:text="Weight"
                android:textColor="#000000"

                />

            <EditText
                android:id="@+id/et_personal1_weight"
                android:layout_width="50dp"
                android:background="@drawable/round_editview"
                android:inputType="number"
                android:paddingLeft="15dp"
                android:singleLine="true" />

            <TextView
                android:layout_width="wrap_content"
                android:width="60dp"
                android:paddingLeft="5dp"
                android:text="kg" />

        </TableRow>

    </TableLayout>


    <ImageButton
        android:id="@+id/ib_personal1_next"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:scaleType="centerCrop"
        android:background="@null"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="30dp"
        android:layout_marginRight="20dp"
        android:src="@drawable/next3" />


</RelativeLayout>
