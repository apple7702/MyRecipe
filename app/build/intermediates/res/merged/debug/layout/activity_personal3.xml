<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fcf9ee"

    tools:context="com.example.yuexiao.myrecipe10.personal3">

    <Button
        android:layout_width="fill_parent"
        android:layout_height="40dp"
        android:layout_gravity="center_horizontal"
        android:background="@color/blue"
        android:text="Personal Information-3"
        android:textAllCaps="false"
        android:textColor="#ffffff"
        android:textSize="20dp" />

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="150dp"
        android:paddingLeft="40dp">

        <TableRow
            android:layout_weight="1"
            android:gravity="center"
            android:paddingBottom="10dp">


            <TextView
                android:layout_width="120dp"
                android:text="Occupation"
                android:textColor="#000000" />

            <Spinner
                android:id="@+id/spn_personal3_occupation"
                android:layout_weight="2"
                android:entries="@array/occupation" />


            <TextView android:layout_width="50dp" />
        </TableRow>

        <TableRow
            android:layout_weight="1"
            android:gravity="center"
            android:paddingBottom="10dp">


            <TextView
                android:layout_width="120dp"
                android:text="Exercise Type"
                android:textColor="#000000" />

            <Spinner
                android:id="@+id/spn_personal3_exercisetype"
                android:layout_weight="2"
                android:entries="@array/exercise_type" />

            <TextView android:layout_width="50dp" />

        </TableRow>

        <TableRow
            android:layout_weight="1"
            android:gravity="center"
            android:paddingBottom="10dp">

            <TextView
                android:layout_width="120dp"
                android:text="Exercise Frequency"
                android:textColor="#000000" />

            <Spinner
                android:id="@+id/spn_personal3_exercisefrequency"
                android:layout_weight="2"
                android:entries="@array/exercise_frequency" />

            <TextView android:layout_width="50dp" />
        </TableRow>

        <TableRow
            android:layout_weight="1"
            android:gravity="center"
            android:paddingBottom="10dp">


            <TextView
                android:layout_width="120dp"
                android:text="Exercise Duration"
                android:textColor="#000000" />

            <Spinner
                android:id="@+id/spn_personal3_exerciseduration"
                android:layout_weight="2"
                android:entries="@array/exercise_duration" />

            <TextView android:layout_width="50dp" />
        </TableRow>

        <TableRow
            android:layout_marginBottom="80dp"
            android:layout_weight="1"
            android:gravity="center"
            android:paddingBottom="10dp">


            <TextView
                android:layout_width="120dp"
                android:text="Exercise Time"
                android:textColor="#000000" />

            <Spinner
                android:id="@+id/spn_personal3_exercisetime"
                android:layout_weight="2"
                android:entries="@array/exercise_time" />

            <TextView android:layout_width="50dp" />
        </TableRow>
    </TableLayout>


    <ImageButton
        android:id="@+id/ib_personal3_finish"
        android:layout_width="50dp"
        android:background="@null"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="30dp"
        android:layout_marginRight="20dp"
        android:adjustViewBounds="true"
        android:scaleType="centerCrop"
        android:src="@drawable/finish" />

    <ImageButton
        android:id="@+id/ib_personal3_back"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:scaleType="centerCrop"
        android:background="@null"

        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_marginBottom="30dp"
        android:layout_marginLeft="20dp"
        android:adjustViewBounds="true"
        android:src="@drawable/back3" />

</RelativeLayout>