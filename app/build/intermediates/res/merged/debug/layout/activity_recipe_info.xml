<TableLayout
    android:id="@+id/main_layout"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="#fcf9ee">


    <LinearLayout
        android:layout_height="40dp"
        android:layout_width="wrap_content"
        android:orientation="horizontal"
        android:background="#35b9c8"
        >

        <ImageButton
            android:id="@+id/ib_recipeinfo_return"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@null"
            android:onClick="back"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="5dp"
            android:scaleType="fitXY"
            android:src="@drawable/back3" />

        <TextView
            android:layout_height="30dp"
            android:layout_width="300dp"
            android:layout_marginTop="5dp"

            android:textColor="#ffffff"
            android:gravity="center"
            android:text="Recipe Information"
            android:textAlignment="center"
            android:textSize="25dp"/>

    </LinearLayout>
    <ImageView
        android:id="@+id/iv_recipepic"
        android:src="@drawable/bg2"
        android:layout_height="200dp"
        android:adjustViewBounds="true"
        android:scaleType="centerCrop"/>
    <TextView
        android:id="@+id/tv_recipename"
        android:layout_marginLeft="8dp"
        android:textSize="20dp"
        android:text="recipe name"
        android:textColor="#000000"

        />
    <TableRow
        android:layout_marginTop="2dp"
        android:layout_marginLeft="12dp"
        android:layout_marginBottom="4dp">
        <TextView
            android:text="CookTme: "
            android:textColor="#000000"
            android:layout_width="wrap_content"/>
        <TextView
            android:id="@+id/tv_cooktime"
            android:layout_weight="0.8"
            android:layout_width="0dp"/>
        <TextView
            android:textColor="#000000"

            android:text="Fat: "/>
        <TextView
            android:id="@+id/tv_fat"
            android:layout_weight="1"
            android:layout_width="0dp"/>

    </TableRow>
    <TableRow
        android:layout_marginBottom="3dp"
        android:layout_marginLeft="12dp">
        <ImageView
            android:layout_marginLeft="5dp"
            android:paddingTop="0dp"
            android:id="@+id/iv_favorite"
            android:layout_width="50dp"
            android:layout_height="30dp"
            android:layout_marginRight="30dp"

            android:adjustViewBounds="true"
            android:scaleType="fitStart"
            android:src="@drawable/star2"/>



        <ImageView
            android:layout_marginRight="30dp"
            android:paddingTop="2dp"
            android:layout_marginLeft="65dp"
            android:id="@+id/iv_addtoplan"
            android:layout_gravity="center"
            android:layout_width="50dp"
            android:layout_height="30dp"
            android:adjustViewBounds="true"
            android:scaleType="fitStart"
            android:src="@drawable/add1"/>




    </TableRow>



    <android.support.design.widget.TabLayout
        android:layout_alignParentBottom="true"
        android:id="@+id/tab_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#35b9c8"
        android:elevation="6dp"
        android:minHeight="?attr/actionBarSize"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"/>

    <android.support.v4.view.ViewPager
        android:id="@+id/pager"
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:layout_below="@id/tab_layout"/>

</TableLayout>